<h2>Add New Medication</h2>

<% if @medication.errors.any? %>
  <div id="error_explanation">
    <p>
      <%= pluralize(@medication.errors.count, "error") %>
      prohibited this medication from being saved:
    </p>

    <ul>
    <% @medication.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @medication do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :trade_names, 'Trade name(s)'%>
  <%= f.text_field :trade_names %><br>
  <%= f.submit "Add Medication"%>
<% end %>