<h2>Add new patient for <%= current_user.display_name %></h2>

<%= render partial: 'shared/form_errors', locals: { model: @patient } %>

<%= form_for @patient do |f| %>

  <%= f.hidden_field :user_id %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :birthdate %>
  <%= f.text_field :birthdate, placeholder: "YYYY-MM-DD" %><br>

  <%= f.submit "add patient" %>
<% end %>