<h2>Edit patient</h2>

<% if @patient.errors.any? %>
  <div id="error_explanation">
    <p>
      <%= pluralize(@patient.errors.count, "error") %>
      prohibited this patient from being saved:
    </p>

    <ul>
    <% @patient.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @patient do |f| %>

  <%# <%= f.hidden_field :user_id %>
  <!-- not needed for now as Patient's provider not changeable -->

  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>
  
  <%= f.label :birthdate %>
  <%= f.text_field :birthdate %><br>

  <%= f.submit "update patient" %>
<% end %>
<br>
<%= button_to 'delete patient',
  @patient,
  method: "delete",
  data: {confirm: "Are you sure you want to delete #{@patient.display_name}? \nThis action cannot be undone."}
%>